{% extends '@INSEADTurkey/base.html.twig' %}

{% block body %}
    <h1>Answers list</h1>

    <table>
        <thead>
            <tr>
                <th>Id</th>
                <th>Lastname</th>
                <th>Firstname</th>
                <th>Company</th>
                <th>Sector</th>
                <th>Jobfunction</th>
                <th>Joblevel</th>
                <th>Location</th>
                <th>Education</th>
                <th>Gender</th>
                <th>Birthday</th>
                <th>Creditearned</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for answer in answers %}
            <tr>
                <td><a href="{{ path('answer_show', { 'id': answer.id }) }}">{{ answer.id }}</a></td>
                <td>{{ answer.lastName }}</td>
                <td>{{ answer.firstName }}</td>
                <td>{{ answer.company }}</td>
                <td>{{ answer.sector }}</td>
                <td>{{ answer.jobFunction }}</td>
                <td>{{ answer.jobLevel }}</td>
                <td>{{ answer.location }}</td>
                <td>{{ answer.education }}</td>
                <td>{{ answer.gender }}</td>
                <td>{% if answer.birthdate %}{{ answer.birthdate|date('Y-m-d') }}{% endif %}</td>
                <td>{{ answer.creditEarned }}</td>
                <td>
                    <ul>
                        <li>
                            <a href="{{ path('answer_show', { 'id': answer.id }) }}">show</a>
                        </li>
                        <li>
                            <a href="{{ path('answer_edit', { 'id': answer.id }) }}">edit</a>
                        </li>
                    </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('answer_new') }}">Create a new answer</a>
        </li>
    </ul>
{% endblock %}
