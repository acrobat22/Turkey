{% extends '@INSEADTurkey/base.html.twig' %}

{% block body %}
    <section class="container"  style="padding-top: 150px">
        <div class="row">
            <h1 class="text-center">Welcome {{ user.firstName|default('')|capitalize }}!</h1>
        </div>

        <div class="row">
            <div class="col-xs-9 col-xs-offset-3">
                {% if user.user.roles[0] == 'ROLE_ASKER' %}
                    {# ASKER -> ask a question #}
                    <a href="{{ path('question_new') }}" class="btn btn-success btn_custom">Ask A Question</a>
                {% elseif user.user.roles[0] == 'ROLE_ANSWER' %}
                    {# ANSWER #}
                    <a href="{{ path('asker_edit', {'id': user.id}) }}" class="btn btn-success btn_custom">Start Answering</a>
                {% endif %}
            </div>
        </div>

        <div class="row">
            <div class="col-xs-9 col-xs-offset-3">
                {% if user.user.roles[0] == 'ROLE_ASKER' %}
                    {# ASKER #}
                    <a href="{{ path('asker_edit', {'id': user.id}) }}" class="btn btn-success btn_custom">My Question</a>
                {% elseif user.user.roles[0] == 'ROLE_ANSWER' %}
                    {# ANSWER #}
                    <a href="{{ path('asker_edit', {'id': user.id}) }}" class="btn btn-success btn_custom">My Account</a>
                {% endif %}
            </div>
        </div>

        {% if user.user.roles[0] == 'ROLE_ASKER' %}
            {# ASKER #}
            <div class="row">
                <div class="col-xs-9 col-xs-offset-3">
                    <a href="{{ path('asker_edit', {'id': user.id}) }}" class="btn btn-success btn_custom">My Account</a>
                </div>
            </div>
        {% elseif user.user.roles[0] == 'ROLE_ANSWER' %}
            {# ANSWER #}
            {# nothing #}
        {% endif %}
    </section>

{% endblock %}
