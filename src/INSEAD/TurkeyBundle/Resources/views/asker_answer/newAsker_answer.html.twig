{% extends '@INSEADTurkey/base.html.twig' %}

{% block body %}

    <div class="container-fluid inscription" style="padding-top: 150px">
        {% for flash_message in app.session.flashBag.get('notif') %}
            <div class="alert  alert-dismissable" role="alert">
                Cet email est déjà enregistré,  merci d'en utiliser un autre !
                <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span
                            aria-hidden="true">&times;</span></button>
            </div>
        {% endfor %}
        <div class="row">
            <div class="header-logo-inscription">
                <a href=""><img src="" /></a>
            </div>
        </div>

        <div class="row">
            <div class="col-md-offset-4 col-xs-offset-1 col-md-4 col-xs-10 custom_jumbotron">
                <h1>{% if type == "asker" %}ASKER{% else %}ANSWER {% endif %}- Renseigner vos informations</h1>
                {{ form_start(form) }}

                <div class="form-group">
                    {{ form_errors(form.username) }}
                    {{ form_widget(form.username, { 'attr': {'placeholder': 'Pick a username'|trans} }) }}
                </div>
                <div class="form-group">
                    {{ form_errors(form.email) }}
                    {{ form_widget(form.email, { 'attr': {'placeholder': 'Your email adress'|trans} }) }}
                </div>

                <div class="form-group">
                    {{ form_errors(form.plainPassword.first) }}
                    {{ form_widget(form.plainPassword.first, { 'attr': {'placeholder': 'Create a password'} }) }}
                </div>

                <div class="form-group">
                    {{ form_errors(form.plainPassword.second) }}
                    {{ form_widget(form.plainPassword.second, { 'attr': {'placeholder': 'Vérif Mot de passe'} }) }}
                </div>


                <div class="form-group">
                    <input class="btn btn-primary" type="submit" value="Valider" />
                    <a class="btn btn-primary" href="{{ path('homepage') }}">Retour</a>
                </div>

                {{ form_end(form) }}
            </div>
        </div>
    </div>

{% endblock %}


