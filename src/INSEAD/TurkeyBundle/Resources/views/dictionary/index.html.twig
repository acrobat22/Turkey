{% extends '@INSEADTurkey/base.html.twig' %}

{% block body %}
<section class="container"  style="padding-top: 150px">
    <div class="row">
        {#<h1 class="text-center">Hi {{ app.user.username }}!</h1>#}
    </div>
    <h1>Dictionaries list</h1>

    <table class="table table-striped" id="tableDictionaryIndex">
        <thead>
            <tr>
                <th>Id</th>
                <th>Word</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for dictionary in dictionaries %}
            <tr>
                <td><a href="{{ path('dictionary_show', { 'id': dictionary.id }) }}">{{ dictionary.id }}</a></td>
                <td>{{ dictionary.word }}</td>
                <td>
                    <ul>
                        <li>
                            <a href="{{ path('dictionary_show', { 'id': dictionary.id }) }}">show</a>
                        </li>
                        <li>
                            <a href="{{ path('dictionary_edit', { 'id': dictionary.id }) }}">edit</a>
                        </li>
                    </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('dictionary_new') }}">Create a new dictionary</a>
        </li>
    </ul>
</section>
{% endblock %}
