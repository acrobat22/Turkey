{% extends '@INSEADTurkey/base.html.twig' %}

{% block body %}

<div class="container">
    <div class="row">
        <div class="header-logo-inscription">
            <a href=""><img src="" /></a>
        </div>
    </div>

    <div class="row">
        <div class="col-md-offset-4 col-xs-offset-1 col-md-4 col-xs-10 custom_jumbotron">
            <h1 class="text-center">Asker profil </h1>
            <br>
            <h2 class="text-center">
                <i class="fa fa-quote-left fa-lg" aria-hidden="true" style="color: grey"></i>
                {{ app.user.username }}
                <i class="fa fa-quote-right fa-lg" aria-hidden="true" style="color: grey"></i>
            </h2>

            {{ form_start(edit_form) }}

            <div class="form-group">
                {{ form_label(edit_form.lastName) }}
                {{ form_widget(edit_form.lastName, { 'attr': {'placeholder': 'Pick your last name'|trans} }) }}
                {{ form_errors(edit_form.lastName) }}
            </div>

            <div class="form-group">
                {{ form_label(edit_form.firstName) }}
                {{ form_widget(edit_form.firstName, { 'attr': {'placeholder': 'Pick your first name'|trans} }) }}
                {{ form_errors(edit_form.firstName) }}
            </div>

            <div class="form-group">
                {{ form_label(edit_form.company) }}
                {{ form_widget(edit_form.company, { 'attr': {'placeholder': 'Pick your company'|trans} }) }}
                {{ form_errors(edit_form.company) }}
            </div>

            <div class="form-group">
                {{ form_label(edit_form.sector) }}
                {{ form_widget(edit_form.sector, { 'attr': {'placeholder': 'Pick your sector'|trans} }) }}
                {{ form_errors(edit_form.sector) }}
            </div>

            <div class="form-group">
                {{ form_label(edit_form.jobFunction) }}
                {{ form_widget(edit_form.jobFunction, { 'attr': {'placeholder': 'Pick your job function'|trans} }) }}
                {{ form_errors(edit_form.jobFunction) }}
            </div>

            <div class="form-group">
                {{ form_label(edit_form.jobLevel) }}
                {{ form_widget(edit_form.jobLevel, { 'attr': {'placeholder': 'Pick your job level'|trans} }) }}
                {{ form_errors(edit_form.jobLevel) }}
            </div>

            <div class="form-group">
                {{ form_label(edit_form.location) }}
                {{ form_widget(edit_form.location) }}
                {{ form_errors(edit_form.location) }}
            </div>

            <div class="form-group">
                {{ form_label(edit_form.annual) }}
                {{ form_widget(edit_form.annual) }}
                {#{{ form_errors(edit_form.annual) }}#}
            </div>

            <div class="form-group">
                {{ form_label(edit_form.marketing) }}
                {{ form_widget(edit_form.marketing, { 'attr': {'placeholder': 'Pick your marketing'|trans} }) }}
                {{ form_errors(edit_form.marketing) }}
            </div>

            {{ form_widget(edit_form) }}
            <div class="row" style="margin-left: 1em">
                <button class="btn btn-primary"
                        type="submit"
                        data-toggle="tooltip"
                        title="Save"
                        style="margin-right: 15px;">
                    <i class="fa fa-floppy-o fa-2x" aria-hidden="true"></i>
                </button>
                {{ form_end(edit_form) }}
                <a class="btn btn-warning"
                   role="button"
                   data-toggle="tooltip"
                   title="Home"
                   href="{{ path('home_connected') }}"
                   style="margin-right: 15px;">
                    <i class="fa fa-home fa-2x" aria-hidden="true"></i>
                </a>
                {% if asker.user.roles[0] == 'ROLE_ASKER_PREMIUM' %}
                    {# nothing#}
                    <a class="btn btn-success"
                       role="button"
                       data-toggle="tooltip"
                       title="Basic account"
                       href="{{ path('asker_basic', { 'id': asker.id }) }}"
                       style="margin-right: 15px;">
                        <i class="fa fa-minus fa-2x" aria-hidden="true"></i>
                    </a>
                {% else %}
                    <a class="btn btn-success"
                       role="button"
                       data-toggle="tooltip"
                       title="Update premium"
                       href="{{ path('asker_premium', { 'id': asker.id }) }}"
                       style="margin-right: 15px;">
                        <i class="fa fa-plus fa-2x" aria-hidden="true"></i>
                    </a>
                {% endif %}
            </div>
        </div>
    </div>
</div>
{% endblock %}
