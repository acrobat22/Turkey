{% extends '@INSEADTurkey/base.html.twig' %}

{% block body %}
    <h1>Asker</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ asker.id }}</td>
            </tr>
            <tr>
                <th>Last_name</th>
                <td>{{ asker.lastname }}</td>
            </tr>
            <tr>
                <th>Firstname</th>
                <td>{{ asker.firstName }}</td>
            </tr>
            <tr>
                <th>Company</th>
                <td>{{ asker.company }}</td>
            </tr>
            <tr>
                <th>Sector</th>
                <td>{{ asker.sector }}</td>
            </tr>
            <tr>
                <th>Jobfunction</th>
                <td>{{ asker.jobFunction }}</td>
            </tr>
            <tr>
                <th>Joblevel</th>
                <td>{{ asker.jobLevel }}</td>
            </tr>
            <tr>
                <th>Location</th>
                <td>{{ asker.location }}</td>
            </tr>
            <tr>
                <th>Annual</th>
                <td>{{ asker.annual }}</td>
            </tr>
            <tr>
                <th>Marketing</th>
                <td>{{ asker.marketing }}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('asker_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('asker_edit', { 'id': asker.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
