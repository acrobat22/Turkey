{# page d'inscription -> nom user et mot de passe #}
{% extends '@INSEADTurkey/base.html.twig' %}

{% block body %}

    <div class="container-fluid inscription" style="padding-top: 35px">
        {% for flash_message in app.session.flashBag.get('notif') %}
            <div class="text-center">
                <strong>{{ flash_message|capitalize }}</strong>
            </div>
        {% endfor %}
        <div class="row">
            <div class="header-logo-inscription">
                <a href=""><img src="" /></a>
            </div>
        </div>

        <div class="row">
            <div class="col-md-offset-4 col-xs-offset-1 col-md-4 col-xs-10">
                <h1>{% if type == "asker" %}ASKER
                     {% else %}ANSWER
                    {% endif %}- Sign up</h1>
                {{ form_start(form) }}

                <div class="form-group">
                    {{ form_errors(form.email) }}
                    {{ form_widget(form.email, { 'attr': {'placeholder': 'Your email adress'|trans} }) }}
                </div>

                <div class="form-group">
                    {{ form_errors(form.plainPassword.first) }}
                    {{ form_widget(form.plainPassword.first, { 'attr': {'placeholder': 'Create a password'} }) }}
                </div>

                <div class="form-group">
                    {{ form_errors(form.plainPassword.second) }}
                    {{ form_widget(form.plainPassword.second, { 'attr': {'placeholder': 'Password verification'} }) }}
                </div>

                <div class="row center" style="display:inline-flex; margin-left: 35%">
                    <button class="btn btn-primary"
                            type="submit"
                            data-toggle="tooltip"
                            title="Save"
                            style="margin-right: 15px;">
                        <i class="fa fa-floppy-o fa-2x" aria-hidden="true"></i>
                    </button>
                    <a class="btn btn-warning"
                       role="button"
                       data-toggle="tooltip"
                       title="Home"
                       href="{{ path('homepage') }}"
                       style="margin-right: 15px;">
                        <i class="fa fa-home fa-2x" aria-hidden="true"></i>
                    </a>
                </div>
                {{ form_end(form) }}
            </div>
        </div>
    </div>

{% endblock %}


