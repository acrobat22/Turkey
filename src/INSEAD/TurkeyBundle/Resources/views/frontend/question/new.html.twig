{% extends '@INSEADTurkey/base.html.twig' %}

{% block body %}
    <section class="container"  style="padding-top: 35px">
        <div class="row">
            <h1 class="text-center">Hi {{ app.user.username }}!</h1>
        </div>
        <h1>Create a question</h1>
        {#--------- DEBUT Message quand base de données pas assez remplie -------------------------------------#}
        {% for flash_message in app.session.flashBag.get('notif') %}
            <div class="alert alert-danger text-center">
                <strong>{{ flash_message|capitalize }}</strong>
            </div>
        {% endfor %}
        {#--------- FIN Message quand base de données pas assez remplie -------------------------------------#}

        {{ form_start(form) }}
        <div class="form-group">
            {{ form_label(form.question) }}
            {{ form_widget(form.question, { 'attr': {'placeholder': 'Type in question'|trans|convert_encoding('ISO-8859-1', 'Windows-1252')} }) }}
            {{ form_errors(form.question) }}
        </div>

            {{ form_widget(form) }}

        <div class="row" style="margin-left: 1em !important; margin-right: 0 !important;">
            <button class="btn btn-success"
                    type="submit"
                    style="margin-right: 15px;">
                <i class="fa fa-check fa-2x" aria-hidden="true"></i>
            </button>
            <a class="btn btn-warning"
               role="button"
               data-toggle="tooltip"
               title="Home"
               href="{{ path('home_connected') }}"
               style="margin-right: 15px;">
                <i class="fa fa-home fa-2x" aria-hidden="true"></i>
            </a>
        </div>
        {{ form_end(form) }}
    </section>
{% endblock %}


