{% extends '@INSEADTurkey/base.html.twig' %}

{% block body %}
    <section class="container"  style="padding-top: 35px">
        <div class="row">
            <h1 class="text-center">Hi {{ app.user.username }}!</h1>
        </div>
        <h1>Question creation</h1>

        {{ form_start(form) }}
        <div class="form-group">
            {{ form_label(form.question) }}
            {{ form_widget(form.question, { 'attr': {'placeholder': 'Pick your question'|trans|convert_encoding('ISO-8859-1', 'Windows-1252')} }) }}
            {{ form_errors(form.question) }}
        </div>

            {{ form_widget(form) }}

        <div class="row" style="display: inline-flex">
            <input class="btn btn-warning" type="submit" value="Create" />
            <a class="btn btn-primary"
               role="button"
               data-toggle="tooltip"
               title="Back to the list"
               href="{{ path('question_index') }}"
               style="margin-right: 15px;">
                <i class="fa fa-arrow-circle-o-left fa-2x" aria-hidden="true"></i>
            </a>
        </div>
        {{ form_end(form) }}
    </section>
{% endblock %}


