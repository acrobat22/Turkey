{% extends '@INSEADTurkey/base.html.twig' %}

{% block body %}
    <section class="container" style="padding-top: 150px">
        <div class="row">
            <h1>Questions list</h1>    </div>



        <table class="table table-striped" id="tableQuestionIndex">
            <thead>
            <tr>
                <th>Id</th>
                <th>Question</th>
                {#<th>Filter</th>#}
                <th>Asker</th>
                <th>Datecreate</th>
                <th>Actions</th>
            </tr>
            </thead>
            <tbody>
            {% for question in questions %}
                <tr>
                    <td><a href="{{ path('question_show', { 'id': question.id }) }}">{{ question.id }}</a></td>
                    <td>{{ question.question }}</td>
                    {#<td>{{ question.filter }}</td>#}
                    <td>{{ question.asker.lastName }}</td>
                    <td>{% if question.dateCreate %}{{ question.dateCreate|localizeddate('short', 'none') }}{% endif %}</td>
                    <td>
                        {#*******************#}
                        {# BOUTON TYPE ASKER #}
                        {#*******************#}
                        {# modifier question #}
                        {% if is_granted('ROLE_ASKER') %}
                            <a class="btn btn-info"
                               role="button"
                               data-toggle="tooltip"
                               title="edit"
                               href="{{ path('question_edit', { 'id': question.id }) }}">
                                <i class="fa fa-pencil-square-o" aria-hidden="true"></i>
                            </a>
                            {# liste réponse par question #}
                            <a class="btn btn-success"
                               role="button"
                               data-toggle="tooltip"
                               title="list response"
                               href="{{ path('reponse_index', {'idQuestion': question.id }) }}">
                                <i class="fa fa-list" aria-hidden="true"></i>
                            </a>
                            {# CSV #}
                            <a class="btn"
                               style="background-color: orange; color: white"
                               role="button"
                               data-toggle="tooltip"
                               title="export CSV"
                               href="{{ path('csvExport', {'idQuestion': question.id }) }}">
                                <i class="fa fa-file-o" aria-hidden="true"></i>
                            </a>
                        {% endif %}
                        {#*******************#}
                        {# BOUTON TYPE ASKER #}
                        {#*******************#}
                        {# répondre #}
                        {% if is_granted('ROLE_ANSWER') %}
                            <a class="btn btn-warning"
                               role="button"
                               data-toggle="tooltip"
                               title="Answer"
                               href="{{ path('reponse_new', {'idQuestion': question.id }) }}">
                                <i class="fa fa-paper-plane-o" aria-hidden="true"></i>
                            </a>
                        {% endif %}
                    </td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
        <div class="row" style="display: inline-flex">
            <a class="btn btn-warning"
               role="button"
               data-toggle="tooltip"
               title="Home"
               href="{{ path('home_connected') }}"
               style="margin-right: 15px;">
                <i class="fa fa-home" aria-hidden="true"></i>
            </a>
            {% if is_granted('ROLE_ASKER') %}
                <a class="btn btn-primary" role="button" href="{{ path('question_new') }}">
                    Create a new question
                </a>
            {% endif %}
        </div>
    </section>
{% endblock %}
