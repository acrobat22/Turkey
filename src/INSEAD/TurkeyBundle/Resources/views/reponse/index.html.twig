{% extends '@INSEADTurkey/base.html.twig' %}

{% block body %}
<section class="container" style="padding-top: 150px">
    <div class="row">
        <h1>Reponses list for
            <i class="fa fa-quote-left" aria-hidden="true"></i>
            {{ question.question }}
            <i class="fa fa-quote-right" aria-hidden="true"></i>
            by {{ question.asker|capitalize }}</h1>
    </div>
    <table class="table table-striped" id="tableReponseIndex">
        <thead>
            <tr>
                <th>Id</th>
                <th>Textreponse</th>
                {#<th>Datecreate</th>#}
                <th>Goodreponse</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for reponse in reponses %}
            <tr>
                <td><a href="{{ path('reponse_show', { 'id': reponse.id }) }}">{{ reponse.id }}</a></td>
                <td>{{ reponse.textReponse }}</td>
                {#<td>{% if reponse.dateCreate %}{{ reponse.dateCreate|date('Y-m-d H:i:s') }}{% endif %}</td>#}
                <td>{% if reponse.goodReponse %}Yes{% else %}No{% endif %}</td>
                <td>
                    <ul>
                        <li>
                            <a href="{{ path('reponse_show', { 'id': reponse.id }) }}">show</a>
                        </li>
                        <li>
                            <a href="{{ path('reponse_edit', { 'id': reponse.id }) }}">edit</a>
                        </li>
                    </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
    <div class="row" style="display: inline-flex">
        <a class="btn btn-warning"
           role="button"
           data-toggle="tooltip"
           title="Home"
           href="{{ path('home_connected') }}"
           style="margin-right: 15px;">
            <i class="fa fa-home" aria-hidden="true"></i>
        </a>
    </div>
</section>
{% endblock %}
