{% extends '@INSEADTurkey/base.html.twig' %}

{% block body %}
<section class="container"  style="padding-top: 150px">
    <div class="row">
        {#<h1 class="text-center">Hi {{ app.user.username }}!</h1>#}
    </div>
    {#--------- DEBUT Message quand base de données pas assez remplie -------------------------------------#}
    {% for flash_message in app.session.flashBag.get('notif') %}
        <div class="alert alert-danger text-center">
            <strong>{{ flash_message|capitalize }}</strong>
        </div>
    {% endfor %}
    {#--------- FIN Message quand base de données pas assez remplie -------------------------------------#}

    <h1>Topics list</h1>

    <table>
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for topic in topics %}
            <tr>
                <td><a href="{{ path('topic_show', { 'id': topic.id }) }}">{{ topic.id }}</a></td>
                <td>{{ topic.name }}</td>
                <td>
                    <ul>
                        <li>
                            <a href="{{ path('topic_show', { 'id': topic.id }) }}">show</a>
                        </li>
                        <li>
                            <a href="{{ path('topic_edit', { 'id': topic.id }) }}">edit</a>
                        </li>
                    </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('topic_new') }}">Create a new topic</a>
        </li>
    </ul>
</section>
{% endblock %}
